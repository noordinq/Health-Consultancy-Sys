<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/dateBookedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nov 22, 2022"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_more"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Details"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/patientImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/patientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamau Joyce"
                    android:layout_toEndOf="@+id/patientImageView"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/patientEmail"
                    android:layout_below="@+id/patientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/patientImageView"
                    android:text="kamaujoyce@gmail.com"
                    android:textColor="#000"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/patientPhone"
                    android:layout_below="@+id/patientEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/patientImageView"
                    android:text="0725678098"
                    android:textColor="#000"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/patientDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/patientPhone"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/patientImageView"
                    android:text="I am the patient"
                    android:textColor="#000"
                    android:textSize="15sp" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/doctorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor Details"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="center"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/doctorDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/doctorImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/doctorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/doctorImageView"
                    android:text="Patel Shah"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/doctorEmail"
                    android:layout_below="@+id/doctorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/doctorImageView"
                    android:text="patel@gmail.com"
                    android:textColor="#000"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/doctorPhone"
                    android:layout_below="@+id/doctorEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/doctorImageView"
                    android:text="0733442637"
                    android:textColor="#000"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/doctorDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctorPhone"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/doctorImageView"
                    android:text="Dentistry"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/doctorSpecialist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctorDepartment"
                    android:layout_marginStart="5dp"
                    android:text="Dentistry"
                    android:layout_toEndOf="@+id/doctorImageView"
                    android:textColor="#000"
                    android:textSize="15sp" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/appointmentTimeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Appointment Time: 7-9 AM"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

